<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/abcd"
    tools:context=".MainActivity" 
    >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1: The largest ocean of the world is"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio310"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atlantic Ocean" />
                <RadioButton
                    android:id="@+id/radio311"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pacific Ocean" />
                <RadioButton
                    android:id="@+id/radio312"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indian Ocean" />
                <RadioButton
                    android:id="@+id/radio313"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None of these" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2: World Trade Organization was established in"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio320"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1980" />
                <RadioButton
                    android:id="@+id/radio321"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1985" />
                <RadioButton
                    android:id="@+id/radio322"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1990" />
                <RadioButton
                    android:id="@+id/radio323"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1995" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3: The world's highest mountain is in"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio330"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="China" />
                <RadioButton
                    android:id="@+id/radio331"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pakistan" />
                <RadioButton
                    android:id="@+id/radio332"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nepal" />
                <RadioButton
                    android:id="@+id/radio333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="India" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4: The oldest university in the world is"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio340"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="University of Bologna" />
                <RadioButton
                    android:id="@+id/radio341"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oxford University" />
                <RadioButton
                    android:id="@+id/radio342"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GLA University" />
                <RadioButton
                    android:id="@+id/radio343"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allahabad University" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5: The Great Wall of China is about ____ KM long."
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio350"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18,196" />
                <RadioButton
                    android:id="@+id/radio351"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19,196" />
                <RadioButton
                    android:id="@+id/radio352"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20,196" />
                <RadioButton
                    android:id="@+id/radio353"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21,196" />

            </RadioGroup>
            
            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>