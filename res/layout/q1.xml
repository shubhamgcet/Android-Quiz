<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ab"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1: Antonym for FOE is-"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio110"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friend" />
                <RadioButton
                    android:id="@+id/radio111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enemy" />
                <RadioButton
                    android:id="@+id/radio112"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foul" />
                <RadioButton
                    android:id="@+id/radio113"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fraud" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2: I am afraid ____ cats."
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to" />
                <RadioButton
                    android:id="@+id/radio121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="from" />
                <RadioButton
                    android:id="@+id/radio122"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of" />
                <RadioButton
                    android:id="@+id/radio123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="with" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3: I cannot concentrate, here is too much _______."
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio130"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detraction" />
                <RadioButton
                    android:id="@+id/radio131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distraction" />
                <RadioButton
                    android:id="@+id/radio132"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sound" />
                <RadioButton
                    android:id="@+id/radio133"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraction" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4: Identify parts of speech in brackets, 'I saw a woman walking (along) the road'."
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio140"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adverb" />
                <RadioButton
                    android:id="@+id/radio141"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjective" />
                <RadioButton
                    android:id="@+id/radio142"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preposition" />
                <RadioButton
                    android:id="@+id/radio143"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conjunction" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5: What type of sentence is, 'An apple a day, keeps the doctor away'?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio150"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adverb" />
                <RadioButton
                    android:id="@+id/radio151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Article" />
                <RadioButton
                    android:id="@+id/radio152"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interjection" />
                <RadioButton
                    android:id="@+id/radio153"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preposition" />

            </RadioGroup>

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>