<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/xx"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1: 7!=?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio210"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70" />
                <RadioButton
                    android:id="@+id/radio211"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120" />
                <RadioButton
                    android:id="@+id/radio212"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="720" />
                <RadioButton
                    android:id="@+id/radio213"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5040" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2: If A and B are matrices, then which form the following is true?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio220"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A+B=B+A" />
                <RadioButton
                    android:id="@+id/radio221"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(A')'=A'" />
                <RadioButton
                    android:id="@+id/radio222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB=BA" />
                <RadioButton
                    android:id="@+id/radio223"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All are true" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3: The derivative of sec(2x) is"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio230"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sec(x)tan(x)" />
                <RadioButton
                    android:id="@+id/radio231"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sec(2x)tan(2x)" />
                <RadioButton
                    android:id="@+id/radio232"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2sec(2x)tan(2x)" />
                <RadioButton
                    android:id="@+id/radio233"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4sec(2x)tan(2x)" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4: If a>b and b>a then"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio240"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a=b" />
                <RadioButton
                    android:id="@+id/radio241"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a!=b" />
                <RadioButton
                    android:id="@+id/radio242"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cannot be evaluated" />
                <RadioButton
                    android:id="@+id/radio243"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Impossible" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5: If a=b and b=c, then a=c. This property is called?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio250"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reflexive" />
                <RadioButton
                    android:id="@+id/radio251"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transitive" />
                <RadioButton
                    android:id="@+id/radio252"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trichotomy" />
                <RadioButton
                    android:id="@+id/radio253"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Symmetric" />

            </RadioGroup>
            
            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>